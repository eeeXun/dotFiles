set previewer   lf_preview
set cleaner     lf_cleaner

# Style
set hidden              true
set icons               true
set mouse               true
set drawbox             true
set roundbox            true
set relativenumber      true
set cursoractivefmt     "\033[4:0;7m"
set cursorparentfmt     "\033[4:3m"
set cursorpreviewfmt    "\033[4:3m"
set statfmt             "%p| %c| %u| %g| %S| %t| \033[1;36m-> %l"

# Basic
cmd on-cd           &{{ lf_title }}
cmd open            ${{ lf_open }}
cmd bg              ${{ lf_background }}
cmd chmod           ${{ lf_chmod }}
cmd cp              ${{ lf_copy }}
cmd mkdir           ${{ lf_mkdir }}
cmd mkfile          ${{ lf_mkfile }}
cmd mks             ${{ lf_mks }}
cmd move            ${{ lf_move }}
cmd trash           ${{ lf_trash }}
cmd slink           ${{ lf_slink }}
cmd sxiv            ${{ lf_sxiv }}
cmd on-redraw       &{{ lf_redraw }}
cmd on-init         on-redraw

# Git
cmd gitBranch       ${{ lf_gitBranch }}
cmd gitLog          ${{ lf_gitLog }}
cmd gitPull         ${{ lf_gitPull }}
cmd gitStatus       ${{ lf_gitStatus }}
cmd gitRemoteVerbos ${{ lf_gitRemoteVerbos }}
cmd gitRemoteAdd    ${{ lf_gitRemoteAdd }}
cmd gitRemoteRemove ${{ lf_gitRemoteRemove }}

# Archive
cmd archive         ${{ lf_archive }}
cmd unarchive       ${{ lf_unarchive }}

# Disable default keybindings
map c
map d
map m

# Basic
map <enter> open
map bg bg
map cc cut
map ch chmod
map cl clear
map dd trash
map gy cp
map md mkdir
map mf mkfile
map mk mark-save
map ms mks
map mv move
map sl slink
map sv sxiv

# Git
map gb gitBranch
map gl gitLog
map gp gitPull
map gs gitStatus
map grv gitRemoteVerbos
map gra gitRemoteAdd
map grr gitRemoteRemove

# Archive
map ak archive
map au unarchive

# vim:ft=conf
