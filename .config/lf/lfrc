&{{ lf_ratio }}
&{{ lf_scrolloff }}
set hidden!
set drawbox
set icons
set mouse
set relativenumber
set previewer   lf_preview
set cleaner     lf_cleaner

# Basic
cmd on-cd       &{{ lf_title }}
cmd open        ${{ lf_open }}
cmd bg          ${{ lf_background }}
cmd chmod       ${{ lf_chmod }}
cmd mkdir       ${{ lf_mkdir }}
cmd mkfile      ${{ lf_mkfile }}
cmd mks         ${{ lf_mks }}
cmd move        ${{ lf_move }}
cmd trash       ${{ lf_trash }}
cmd sxiv        ${{ lf_sxiv }}

# Git
cmd gitBranch   ${{ lf_gitBranch }}
cmd gitLog      ${{ lf_gitLog }}
cmd gitPull     ${{ lf_gitPull }}
cmd gitStatus   ${{ lf_gitStatus }}

# Archive
cmd archive     ${{ lf_archive }}
cmd unarchive   ${{ lf_unarchive }}

# Disable default keybindings
map c
map d
map m

# Basic
map <enter> open
map bg bg
map cc cut
map ch chmod
map cl clear
map dd trash
map md mkdir
map mf mkfile
map mk mark-save
map ms mks
map mv move
map sv sxiv

# Git
map gb gitBranch
map gl gitLog
map gp gitPull
map gs gitStatus

# Archive
map ak archive
map au unarchive

# vim:ft=conf
