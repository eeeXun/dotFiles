${{ $HOME/.config/lf/scripts/setRatio.sh }}
set hidden!
set drawbox
set icons
set mouse
set scrolloff 3
set relativenumber
set previewer   ~/.config/lf/scripts/preview.sh
set cleaner     ~/.config/lf/scripts/clear.sh

# Basic
cmd open        ${{ $HOME/.config/lf/scripts/open.sh }}
cmd bg          ${{ $HOME/.config/lf/scripts/background.sh }}
cmd chmod       ${{ $HOME/.config/lf/scripts/chmod.sh }}
cmd mkdir       ${{ $HOME/.config/lf/scripts/mkdir.zsh }}
cmd mkfile      ${{ $HOME/.config/lf/scripts/mkfile.zsh }}
cmd mkInPWD     ${{ $HOME/.config/lf/scripts/mkInPWD.sh }}
cmd move        ${{ $HOME/.config/lf/scripts/move.zsh }}
cmd trash       ${{ $HOME/.config/lf/scripts/trash.sh }}
cmd sxiv        ${{ $HOME/.config/lf/scripts/sxiv.sh }}

# Git
cmd gitBranch   ${{ $HOME/.config/lf/scripts/gitBranch.sh }}
cmd gitLog      ${{ $HOME/.config/lf/scripts/gitLog.sh }}
cmd gitStatus   ${{ $HOME/.config/lf/scripts/gitStatus.sh }}

# Archive
cmd archive     ${{ $HOME/.config/lf/scripts/archive.zsh }}
cmd unarchive   ${{ $HOME/.config/lf/scripts/unarchive.zsh }}

# Disable default keybindings
map c
map d
map m

# Mouse
map <m-1> updir
map <m-2> open
map <m-up> up
map <m-down> down

# Basic
map <enter> open
map bg bg
map cc cut
map ch chmod
map cl clear
map dd trash
map md mkdir
map mf mkfile
map mk mark-save
map ms mkInPWD
map mv move
map sv sxiv

# Git
map gb gitBranch
map gl gitLog
map gs gitStatus

# Archive
map ak archive
map au unarchive

# vim:ft=conf
