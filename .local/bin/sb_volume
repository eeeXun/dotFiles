#!/bin/sh

icon_off="󰝟"
icon_low="󰕿"
icon_mid="󰖀"
icon_high="󰕾"
color_off="^c#A89984^"
color_low="^c#689D6A^"
color_mid="^c#D79921^"
color_high="^c#FE8019^"

volume=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{printf "%d", $2*100}')
mode=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{print $3}')

if [ "$mode" = "[MUTED]" ]; then
    echo "$color_off$icon_off $volume%"
elif [ $volume -le 33 ]; then
    echo "$color_low$icon_low $volume%"
elif [ $volume -le 66 ]; then
    echo "$color_mid$icon_mid $volume%"
else
    echo "$color_high$icon_high $volume%"
fi
