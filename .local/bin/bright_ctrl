#!/bin/sh

case $1 in
    "up")
        brightnessctl set +5%;;
    "down")
        brightnessctl set 5%-;;
esac

brightness=$(brightnessctl info | grep "%" | sed -r "s/.*\((.*)\).*/\1/")
dunst_tag="bright"

dunstify -t 1500 \
    -h int:value:$brightness \
    -h string:fgcolor:#83A598 \
    -h string:hlcolor:#83A598 "ó°ƒŸ $brightness" \
    -h string:x-dunst-stack-tag:$dunst_tag
