#!/bin/sh

case $1 in
    "up")
        xbacklight -inc 5 -time 0;;
    "down")
        xbacklight -dec 5 -time 0;;
esac

brightness=$(xbacklight -get | cut -d "." -f 1)
dunst_tag="bright"

dunstify -t 1500 \
    -h int:value:$brightness \
    -h string:fgcolor:#83A598 \
    -h string:hlcolor:#83A598 "ó°ƒŸ $brightness%" \
    -h string:x-dunst-stack-tag:$dunst_tag
