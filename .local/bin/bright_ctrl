#!/bin/sh

case $1 in
    "up")
        xbacklight + 5;;
    "down")
        xbacklight - 5;;
esac

brightness=$(xbacklight -get | cut -d "." -f 1)
dunst_tag="bright"

dunstify -t 1500 \
    -h int:value:$brightness \
    -h string:fgcolor:#83A598 \
    -h string:hlcolor:#83A598 "ï—ž $brightness%" \
    -h string:x-dunst-stack-tag:$dunst_tag
