#!/bin/sh

case $1 in
    "toggle")
        wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle;;
    "up")
        wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+;;
    "down")
        wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-;;
esac

volume=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{printf "%d", $2*100}')
mode=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{print $3}')
dunst_tag="volume"

if [ "$mode" = "[MUTED]" ]; then
    dunstify -t 1500 \
        -h int:value:$volume \
        -h string:fgcolor:#A89984 \
        -h string:hlcolor:#A89984 "󰝟 $volume%" \
        -h string:x-dunst-stack-tag:$dunst_tag
elif [ $volume -le 33 ]; then
    dunstify -t 1500 \
        -h int:value:$volume \
        -h string:fgcolor:#689D6A \
        -h string:hlcolor:#689D6A "󰕿 $volume%" \
        -h string:x-dunst-stack-tag:$dunst_tag
elif [ $volume -le 66 ]; then
    dunstify -t 1500 \
        -h int:value:$volume \
        -h string:fgcolor:#D79921 \
        -h string:hlcolor:#D79921 "󰖀 $volume%" \
        -h string:x-dunst-stack-tag:$dunst_tag
else
    dunstify -t 1500 \
        -h int:value:$volume \
        -h string:fgcolor:#FE8019 \
        -h string:hlcolor:#FE8019 "󰕾 $volume%" \
        -h string:x-dunst-stack-tag:$dunst_tag
fi
