#!/bin/sh

case $1 in
    "toggle")
        amixer set Master toggle;;
    "up")
        amixer set Master 5%+;;
    "down")
        amixer set Master 5%-;;
esac

volume=$(amixer get Master | tail -n1 | sed -r "s/.*\[(.*)%\].*/\1/")
mode=$(amixer get Master | tail -n1 | sed -r "s/.*\[.*\].*\[(.*)\]/\1/")

if [ "$mode" = "off" ]; then
    dunstify -r 2593 -t 1500 -h int:value:$volume -h string:fgcolor:#A89984 \
        -h string:hlcolor:#A89984 " $volume%"
elif [ $volume -le 33 ]; then
    dunstify -r 2593 -t 1500 -h int:value:$volume -h string:fgcolor:#689D6A \
        -h string:hlcolor:#689D6A " $volume%"
elif [ $volume -le 66 ]; then
    dunstify -r 2593 -t 1500 -h int:value:$volume -h string:fgcolor:#D79921 \
        -h string:hlcolor:#D79921 "墳 $volume%"
else
    dunstify -r 2593 -t 1500 -h int:value:$volume -h string:fgcolor:#FE8019 \
        -h string:hlcolor:#FE8019 " $volume%"
fi
